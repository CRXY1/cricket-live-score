{
  "name": "cricxl-backend",
  "version": "1.0.0",
  "description": "Backend API and Admin Dashboard for CricXL - Cricket Live Score Management System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run admin:dev\"",
    "server:dev": "nodemon --exec ts-node src/server.ts",
    "admin:dev": "cd admin-dashboard && npm start",
    "build": "npm run build:server && npm run build:admin",
    "build:server": "tsc",
    "build:admin": "cd admin-dashboard && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "setup:admin": "cd admin-dashboard && npm install"
  },
  "keywords": [
    "cricket",
    "live-score",
    "backend",
    "admin",
    "cms",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Hamid Ali",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "redis": "^4.6.7",
    "sharp": "^0.32.5",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.3",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.4",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
